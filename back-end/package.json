{
	"name": "books-api",
	"version": "1.0.0",
	"scripts": {
		"start": "npm run transpile && node server.js",
		"dev": "concurrently \"npm:watch\" \"npm:serve\"",
		"serve": "nodemon server.js",
		"watch": "tsc -w",
		"transpile": "tsc",
		"lint": "tslint -c tslint.json -p tsconfig.json",
		"test": "npm run transpile && jest"
	},
	"engines": {
		"node": ">=8.0"
	},
	"keywords": [
		"Node",
		"Typescript",
		"javascript",
		"books"
	],
	"license": "MIT",
	"dependencies": {
		"@types/express": "^4.17.11",
		"@types/helmet": "4.0.0",
		"@types/node": "^15.0.1",
		"concurrently": "^6.0.2",
		"cors": "2.8.5",
		"express": "^4.17.1",
		"helmet": "^4.5.0",
		"husky": "^6.0.0",
		"nodemon": "^2.0.7",
		"tslint": "^6.1.2",
		"typescript": "^4.2.4"
	},
	"hooks": {
		"pre-commit": "npm run lint"
	},
	"devDependencies": {
		"@babel/preset-env": "7.15.8",
		"@types/jest": "27.0.2",
		"jest": "27.3.1",
		"ts-jest": "27.0.7"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testPathIgnorePatterns": [
			"src/__tests__/book-repository.test.js"
		]
	}
}
